{
    // 拡張機能の定義
    "manifest_version": 2,  // マニフェストのバージョン ※"2"を指定
    "name": "ShowMarkdown",       // 拡張機能の名称
    "version": "1.0",       // 拡張機能のバージョン
 
    "description": "markdownを直接ブラウザで見ることができるようにする",  // 拡張機能の概要
 
    // スクリプトの設定
    "content_scripts": [
        {
            "matches": ["file:///*.md"],
            "js": ["src/main.js"]
        }
    ],
    "permissions": [
	"http://localhost:8080/post"
    ]
}
